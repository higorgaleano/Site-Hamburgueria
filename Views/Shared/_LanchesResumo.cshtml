@model LancheModel

<div class="py-4 col-sm-4 col-md-4 col-lg-4 justify-content-center align-items-center">
    <p>
        <a asp-controller="Lanche" asp-action="Detalhes" asp-route-Id="@Model.Id">
            <img id="burgers" class="img-thumbnail custom-image" src="@Model.ImagemUrl" />
            <h4>@Model.Nome</h4>
        </a>
    <p>
    <p>@Model.DescricaoCurta</p>
    <h4>Preço: @Model.preco.ToString("c")</h4>
    <div>

            <a class="btn btn-primary" id="cartButton" 
            asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-Id="@Model.Id">
                Incluir no Carrinho
            </a>

    </div>
    
</div>
